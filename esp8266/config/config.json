{
  "Gateway": {  
    "version": 3,
    "id": "gate irrigation point",
    "description": "ElectroDragon ESP2866"
  },
  "Devices": [
    {
        "type": "SwitchDevice", 
        "id": "light_relay", 
        "gpio": 12,
        "state": false,
        "description": "Relay centre out"
    },
    {
        "type": "SwitchDevice",
        "id": "tap_relay", 
        "gpio": 13,
        "state": false,
        "description": "Relay corner out"
    },
    {
        "type": "DHTDevice", 
        "id": "temperature_and_humidity_sensor",
        "poll_frequency": 60,
        "gpio": 14,
        "description": "Digital Humidity and Temperature sensor"
    },
    {
        "type": "MoistureSensorDevice",
        "id": "moisture_sensor",
        "poll_frequency": 60,
        "gpio": 5,
        "gpio_ADC": 0,
        "description": "Soil moisture sensor"
    },
    {
        "type": "TriggerDevice",
        "id": "motion_trigger",
        "poll_frequency": 1,
        "gpio": 4,
        "description": "PIR motion detector"
    },
    {
        "type": "TransmitterDevice",
        "id": "transmitter",
        "poll_frequency": 1,
        "publish_changes_only": true,
        "gpio": 15,
        "retries": 50,
        "start_value": false,
        "pattern": "*** secret",
        "pulses": "*** secret",
        "timings": "*** secret",
        "description": "RF 433Mhz transmitter"
    }
  ]
}
