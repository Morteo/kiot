{
  "Gateway": {  
    "id": "gate",
    "server": "192.168.1.1",
    "username": "********",
    "password": ""********",
    "version": 2,
    "description": "ElectroDragon ESP2866"
  },
  "Devices": [
    {
        "type": "SwitchDevice", 
        "id": "light_relay", 
        "gpio": 12,
        "state": false,
        "description": "Relay centre out"
    },
    {
        "type": "SwitchDevice",
        "id": "tap_relay", 
        "gpio": 13,
        "state": false,
        "description": "Relay corner out"
    },
    {
        "type": "TransmitterDevice",
        "id": "gate_remote",
        "poll_frequency": 1,
        "publish_changes_only": true,
        "gpio": 15,
        "retries": 50,
        "start_value": false,
        "pattern":  [ 10792, 10792, 1051, 344, 1051, 344, 1051, 344,1051, 344 ],
        "description": "RF 433Mhz transmitter"
    },
    {
        "type": "TriggerDevice",
        "id": "motion_trigger",
        "poll_frequency": 1,
        "gpio": 4,
        "description": "PIR motion detector"
    },
    {
        "type": "TriggerDevice",
        "id": "moisture_trigger",
        "poll_frequency": 60,
        "gpio": 14,
        "description": "Soil moisture sensor switch"
    },
    {
        "type": "DHT22Device", 
        "id": "temperature_and_humidity_sensor",
        "poll_frequency": 60,
        "gpio": 14,
        "description": "Temperature and humidity sensor"
    },
    {
        "type": "MoistureSensorDevice",
        "id": "moisture_sensor",
        "poll_frequency": 60,
        "gpio": 5,
        "gpio_ADC": 0,
        "description": "Soil moisture sensor"
    }
  ]
}
