{
  "Gateway": {  
    "id": "example",
    "description": "Example",
    "type": "electrodragon-wifi-iot-relay-board-spdt-based-esp8266"
  },
  "Devices": [
    {
        "id": "heating", 
        "description": "Relay centre out controls heating on/off",
        "type": "SwitchDevice", 
        "gpio": 12,
        "state": false
    },
    {
        "id": "light", 
        "description": "Relay corner out controls ceiling light on/off",
        "type": "SwitchDevice", 
        "gpio": 13,
        "state": false
    },
    {
        "id": "temperature_and_humidity_sensor",
        "description": "Digital Humidity and Temperature sensor",
        "type": "DHTDevice",
        "dht_type": 22,
        "poll_frequency": 60,
        "gpio": 14
    },
    {
        "id": "moisture_sensor",
        "description": "Soil moisture sensor",
        "type": "MoistureSensorDevice",
        "poll_frequency": 600,
        "gpio": 5,
        "gpio_ADC": 0
    }    
